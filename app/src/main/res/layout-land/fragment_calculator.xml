<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    <!-- Display Area -->
    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:background="@color/white"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonsArea"
        android:elevation="4dp" />

    <!-- Buttons Area -->
    <LinearLayout
        android:id="@+id/buttonsArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Button for Clear (AC) -->
            <Button
                android:id="@+id/btnClear"
                android:layout_width="550dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:text="AC"
                android:background="@drawable/colorful_button_clear"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/btnEquals"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:text="="
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/red" />

        </RelativeLayout>

        <!-- Button Rows -->
        <!-- Row 1 (includes Clear button) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Button for Decimal (.) - Centered -->
            <Button
                android:id="@+id/btn0"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:background="@drawable/colorful_button_clear"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginLeft="300dp"
                android:text="."
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <!-- Button for Add (+) -->
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:text="+"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/red" />

        </RelativeLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="1"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="2"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="3"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="-"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/red" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="4"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="5"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="6"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="*"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/red" />
        </LinearLayout>

        <!-- Row 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="7"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"  />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="8"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"  />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="9"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"  />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="/"
                android:background="@drawable/colorful_button"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/red" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
